if command -v doas >/dev/null 2>&1 ; then
    alias sudo='doas'
fi

if command -v fastfetch >/dev/null 2>&1 ; then
    alias neofetch='fastfetch'
fi

alias ls='ls --color=auto'
alias ll='ls -lha'
alias l='ls -lhA'
alias c='cd ..'

alias v='$EDITOR'
alias lg='lazygit'
alias ssha='eval `ssh-agent -s` && ssh-add'
